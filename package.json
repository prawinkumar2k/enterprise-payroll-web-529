{
  "name": "enterprise-payroll-system",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "client": "npm run dev --workspace enterprise-payroll-client",
    "server": "npm run dev --workspace enterprise-payroll-server",
    "build": "npm run build --workspace enterprise-payroll-client"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}