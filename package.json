{
  "name": "enterprise-payroll-system",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "client": "npm run dev --workspace enterprise-payroll-client",
    "server": "npm run dev --workspace enterprise-payroll-server",
    "build": "npm run build --workspace enterprise-payroll-client",
    "electron:dev": "concurrently \"npm run server\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder build --win"
  },
  "author": "Enterprise Systems Team",
  "description": "Enterprise-Grade Payroll & HRMS Local Persistence Engine",
  "dependencies": {
    "adm-zip": "^0.5.16",
    "axios": "^1.13.5",
    "bcryptjs": "^3.0.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "electron-updater": "^6.7.3",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "mysql2": "^3.9.1",
    "pino": "^8.17.2",
    "pino-http": "^9.0.0",
    "pino-pretty": "^10.3.1",
    "sql.js": "^1.14.0",
    "uuid": "^11.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.2",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.1",
    "electron": "^28.2.0",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2",
    "wait-on": "^7.2.0"
  },
  "main": "electron/main.js",
  "build": {
    "appId": "com.enterprise.payroll",
    "productName": "Enterprise Payroll System",
    "copyright": "Copyright Â© 2026 Enterprise Systems Team",
    "directories": {
      "output": "release/v1.0.0"
    },
    "files": [
      "client/dist/**/*",
      "server/**/*",
      "electron/**/*",
      "package.json",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,pyc,hprof,mdf,pyo,blob,db,log}",
      "!.git"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "client/public/favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Enterprise Payroll",
      "installerIcon": "client/public/favicon.ico",
      "uninstallerIcon": "client/public/favicon.ico",
      "artifactName": "Enterprise-Payroll-System-Setup-${version}.${ext}"
    },
    "npmRebuild": false
  },
  "engines": {
    "node": ">=20 <21"
  }
}